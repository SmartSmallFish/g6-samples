{
    "compilerOptions": {
        "outDir": "./dist/",
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "module": "esnext",
        "moduleResolution": "node",
        "target": "esnext",
        "jsx": "react",
        "noImplicitThis": true,
        "strictBindCallApply": true,
        "paths": {
            "@/*": [
                "src/editor/*"
            ]
        }
    },
    "include": [
        "./src/**/*"
    ]
}